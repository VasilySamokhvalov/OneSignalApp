@page
@model OneSignalApp.Pages.AppModel
@{
}

<form method="post">
    <div class="form-group">
        <a asp-page="/AppList" class="btn btn-dark">
            Back
        </a>
    </div>
    @if (!String.IsNullOrEmpty(Model.App.Id))
    {
        <div class="form-group">
            <label for="Email" class="col-sm-2 control-label">Id</label>
            <div class="col-md-10">
                @Html.DisplayFor(m => Model.App.Id)
            </div>
            @Html.HiddenFor(m => m.App.Id)
        </div>
    }
    <div class="form-group">
        <label for="Password" class="col-sm-2 control-label">Name</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.App.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info">Save</button>
        </div>
    </div>
</form>
